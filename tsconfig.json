{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Allows JavaScript files in the project
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": false, // Disable all strict type-checking options
    "noImplicitAny": false, // Allow 'any' type implicitly
    "noImplicitThis": false, // Disable 'this' errors
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": false, // Disable filename casing checks
    "noFallthroughCasesInSwitch": false, // Disable fallthrough case checks in switch statements
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/pages/_document.tsx", // Ensure correct spelling of file
    "out/types/**/*.ts",
    "src/constants/its"
  ],
  "exclude": ["node_modules"]
}
